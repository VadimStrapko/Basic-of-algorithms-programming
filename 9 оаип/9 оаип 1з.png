                   double f(double x)
{
    return sin(x) + 1;
}


double Trapecii(double a, double b, int n)
{
    double h = (a - b) / n;
    double sum = f(a) + f(b);
    for (int i = 1; i <= n - 1; i++)
    {
        sum += 2 * f(a + i * h);
    }
    sum *= h / 2;
    return sum;
}


double Paraboli(double a, double b, int n)
{
    double h = (a - b) / n;
    double sum = f(a) + f(b);
    int k;
    for (int i = 1; i <= n - 1; i++)
    {
        k = 2 + 2 * (i % 2);
        sum += k * f(a + i * h);
    }
    sum *= h / 3;
    return sum;
}


